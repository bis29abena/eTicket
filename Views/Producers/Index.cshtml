@model IEnumerable<Producer>

@{
    ViewData["Title"] = "List Of Producers";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th class="align-middle">@Html.DisplayNameFor(model => model.ProducerProfilePictureUrl)</th>
                    <th class="align-middle">@Html.DisplayNameFor(model => model.ProducerFullName)</th>
                    <th class="align-middle">@Html.DisplayNameFor(model => model.ProducerBio)</th>
                    <th class="align-middle">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" style="max-width: 150px" src="@item.ProducerProfilePictureUrl" alt="@item.ProducerFullName" />
                        </td>
                        <td class="align-middle">@item.ProducerFullName</td>
                        <td class="align-middle">@item.ProducerBio</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Update" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }

            </tbody>

        </table>
    </div>
</div>

@await Html.PartialAsync("_CreateItem", "Producers")