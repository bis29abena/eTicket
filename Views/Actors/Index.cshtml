@*Define The Model*@
@model IEnumerable<Actor>

@*Define The View Data*@

@{
    ViewData["Title"] = "List Of Actors";
 }

@*Write Code*@
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th class="align-middle">@Html.DisplayNameFor(model => model.ActorProfilePictureUrl)</th>
                    <th class="align-middle">@Html.DisplayNameFor(model => model.ActorFullName)</th>
                    <th class="align-middle">@Html.DisplayNameFor(model => model.ActorBio)</th>
                    <th class="align-middle">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                    
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ActorProfilePictureUrl" alt="@item.ActorFullName"  style="max-width: 150px"/>
                        </td>
                    
                    
                        <td class="align-middle">
                            @item.ActorFullName
                        </td>
                    
                    
                        <td class="align-middle">
                            @item.ActorBio
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a> |
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@await Html.PartialAsync("_CreateItem", "Actors")