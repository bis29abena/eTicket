@model Cinema

@{
    ViewData["Title"] = "Delete Cinema";
}

<div class="row text">
    <div class="col-md-8 offset-md-2">
        <p>
            <h4>Delete Confirmation @Model.CinemaName</h4>
        </p>
        <div class="row">
            <div class="col-md-8 offset-md-2">

                <form asp-action="Delete">
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width: 150px;" id="ProfilePicturePreview" />
                    </div>
                    <div class="form-group">
                        <label asp-for="CinemaLogo" class="control-label"></label>
                        <input asp-for="CinemaLogo" class="form-control" readonly />
                        <span asp-validation-for="CinemaLogo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CinemaName" class="control-label"></label>
                        <input asp-for="CinemaName" class="form-control" readonly />
                        <span asp-validation-for="CinemaName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CinemaDescription" class="control-label"></label>
                        <input asp-for="CinemaDescription" class="form-control" readonly />
                        <span asp-validation-for="CinemaDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Id" hidden />
                        <input type="submit" value="Confirmed" class="btn btn-danger float-right" />
                        <a asp-action="Index" class="btn btn-outline-secondary">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById("ProfilePicturePreview");
            output.src = $("#CinemaLogo").val();
        })
    </script>
}