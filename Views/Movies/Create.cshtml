@model NewMovieVM
@using eTicket.Data


@{
    ViewData["Title"] = "Create a New Movie";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>
                Create A Movie
            </h4>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="MovieName"  class="control-label">Movie Name</label>
                                <input asp-for="MovieName" class="form-control" id="MovieName"/>
                                <span asp-validation-for="MovieName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="MovieStartDate" class="control-label">Movie Start Date</label>
                                <input asp-for="MovieStartDate" type="date" class="form-control" id="MovieStartDate"/>
                                <span asp-validation-for="MovieStartDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="MovieEndDate" class="control-label">Movie End Date</label>
                                <input asp-for="MovieEndDAte" type="date" class="form-control" id="MovieEndDate"/>
                                <span asp-validation-for="MovieEndDAte" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="MoviePrice" class="control-label">Movie Price</label>
                                <input asp-for="MoviePrice" class="form-control" id="MoviePrice"/>
                                <span asp-validation-for="MoviePrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="MovieImageUrl" class="control-label">Movie Image Link</label>
                                <input asp-for="MovieImageUrl" class="form-control" id="MovieImageUrl"/>
                                <span asp-validation-for="MovieImageUrl" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="CinemaId" class="control-label">Cinema Name</label>
                                <select asp-for="CinemaId" class="form-control" asp-items="ViewBag.Cinemas" id="CinemaId"></select>
                                <span asp-validation-for="CinemaId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="MovieCategory" class="control-label">Movie Category</label>
                                <select asp-for="MovieCategory" class="form-control" asp-items="Html.GetEnumSelectList<MovieCategory>()" id="MovieCategory"></select>
                                <span asp-validation-for="MovieCategory" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="ProducerId" class="control-label">Producer Name</label>
                                <select asp-for="ProducerId" class="form-control" asp-items="ViewBag.Producers" id="ProducerId"></select>
                                <span asp-validation-for="ProducerId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="ActorsId" class="control-label">Actors Name</label>
                                <select asp-for="ActorIds" class="form-control" asp-items="ViewBag.Actors" id="ActorsId"></select>
                                <span asp-validation-for="ActorIds" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="MovieDescription" class="control-label">Movie Description</label>
                                <textarea asp-for="MovieDescription" class="form-control" multiple id="MovieDescription"></textarea>
                                <span asp-validation-for="MovieDescription" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImageUrlPreview" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $("#MovieImageUrl").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}